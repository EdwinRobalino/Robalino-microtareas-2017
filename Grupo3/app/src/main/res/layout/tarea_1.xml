<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edwin.grupo3.tarea_1">

    <LinearLayout
        android:id="@+id/lTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarea 1: Crear un menú que permita visualizar 3 opciones y a su vez se pueda expandir 3 opciones más (menú con un submenú)." />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lContenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/lTitulo"
        android:layout_marginTop="20sp">


        <TextView
            android:id="@+id/Pasos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Pasos" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Crear nueva carpeta de recursos para menu y tambien su layout" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Añadir los elementos del menu" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Invocar el menu mediante el metodo onCreateOptionsMenu" />
    </LinearLayout>

</RelativeLayout>
