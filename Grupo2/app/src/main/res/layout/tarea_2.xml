<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edwin.grupo2.tarea_2">

    <LinearLayout
        android:id="@+id/lTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarea 2: Hacer una lista de tareas" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lContenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/lTitulo">


        <EditText
            android:id="@+id/txtLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingresa actividad"
            android:inputType="text" />

        <Button
            android:id="@+id/btnLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="pagInit"
            android:text="Lista" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/cust"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lContenido"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

        <TextView
            android:id="@+id/txtContenido"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="TextView" />
    </LinearLayout>

</RelativeLayout>
